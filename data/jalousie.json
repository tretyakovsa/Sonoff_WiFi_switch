{
 "configs":[
  "/config.live.json",
  "/config.options.json",
  "/lang/lang.{{lang}}.json",
  "/modules.json"
 ],
 "title":"{{LangOptions1}}",
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content":[
  {
   "type":"h5",
   "title":"{{SSDP}}",
   "class":"alert-success"
  },

  {
   "type":"loadJson",
   "state":"header.json"
  },

  {
   "type":"text",
   "module":"ddns",
   "name":"alert-ifttt",
   "title":"<button class=\"close\" onclick=\"hide('alert-ifttt',this)\" type=\"button\">Ã—</button>{{LangIfttt1}}",
   "class":"alert alert-info {{alert-ifttt}}"
  },


  {
   "type":"button",
   "title":"('{{stateJalousie}}'==1?'{{LangClose}}':'{{LangOpen}}')",
   "name":"motor",
   "module":"jalousie",
   "response":"[[motor]]",
   "action":"jalousie not",
   "class":"'btn btn-block btn-lg btn-'+({{stateJalousie}}?'info':'primary')"
  },


  {
   "type":"hr"
  },

  {
   "type":"h2",
   "title":"{{LangTurn}}"
  },
  {
   "type":"input",
   "title":"{{turn}}",
   "module":"jalousie",
   "name":"turn",
   "state":"{{turn}}",
   "pattern":"[0-9]{1,3}"
  },
  {
   "type":"button",
   "module":"jalousie",
   "title":"{{LangSave}}",
   "class":"btn btn-block btn-success",
   "action":"jalousie turn [[turn]]"
  },


  {
   "type":"hr",
   "module":"timers"
  },


  {
   "type":"h2",
   "module":"timers",
   "title":"{{LangTimer}}"
  },


  {
   "type":"table",
   "module":"timers",
   "state":"timer.save.json",
   "title":{
    "module":"",
    "trigger":"{{LangOnM}}/{{LangOffM}}",
    "day":"{{LangDay}}",
    "time":"{{LangTime4}}",
    "work":"{{LangWorkTime}}"
   },
   "class":"table alert alert-dismissible alert-warning",
   "style":"width:100%;"
  },
  {
   "type":"link",
   "module":"timers",
   "title":"{{LangTimer}}",
   "action":"page.htm?timer",
   "class":"btn btn-block btn-default"
  },


  {
   "type":"hr"
  },


  {
   "type":"chart",
   "title":"{{LangAnalog}}",
   "state":"analog.json",
   "module":"analog",
   "action":"/page.htm?chart&analog",
   "style":"height:200px;margin-left:-20px"
  },
  {
   "type":"chart",
   "title":"{{LangTemperature}}",
   "state":"temperature.json",
   "module":"temperature",
   "action":"/page.htm?chart&temperature",
   "style":"height:200px;margin-left:-20px"
  },
  {
   "type":"chart",
   "title":"{{LangHumidity}}",
   "state":"humidity.json",
   "module":"humidity",
   "action":"/page.htm?chart&humidity",
   "style":"height:200px;margin-left:-20px"
  },

  {
   "type":"link",
   "title":"<i class=\"opt-img\"></i> {{LangSetting3}}",
   "action":"/page.htm?setup",
   "class":"btn btn-block btn-default"
  }

 ]
}
